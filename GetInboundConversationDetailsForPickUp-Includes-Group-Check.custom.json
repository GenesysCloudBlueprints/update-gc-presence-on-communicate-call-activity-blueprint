{
  "name": "GetInboundConversationDetailsForPickUp (Includes Group Check)",
  "integrationType": "purecloud-data-actions",
  "actionType": "custom",
  "config": {
    "request": {
      "requestUrlTemplate": "/api/v2/analytics/conversations/${input.CONVERSATION_ID}/details",
      "requestType": "GET",
      "headers": {},
      "requestTemplate": "${input.rawRequest}"
    },
    "response": {
      "translationMap": {
        "purpose": "['participants'][?(@.purpose=='group')].purpose",
        "segmentType": "['participants'][?(@.purpose=='user')]['sessions'][?(@.direction=='inbound')]['segments'][?(@.segmentType=='interact')].segmentType"
      },
      "translationMapDefaults": {},
      "successTemplate": "{\"segmentType\": ${segmentType}, \"purpose\": ${purpose}}"
    }
  },
  "contract": {
    "input": {
      "inputSchema": {
        "type": "object",
        "properties": {
          "CONVERSATION_ID": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "output": {
      "successSchema": {
        "type": "object",
        "properties": {
          "segmentType": {
            "type": "array",
            "items": {
              "title": "segmentType",
              "type": "string"
            }
          },
          "purpose": {
            "type": "array",
            "items": {
              "title": "purpose",
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "secure": false
}
